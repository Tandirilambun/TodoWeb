@using Microsoft.AspNetCore.Identity
@inject UserManager<User> userManager

@{
    var user = await userManager.GetUserAsync(User);
}

<div class="floating-nav">
    <div class="float-item" onclick="goBack()">
        <i class="bi bi-arrow-left-short"></i>
    </div>
    <a class="float-item" href="/Home">
        <i class="bi bi-house"></i>
    </a>
    <div class="float-item">
        <i class="bi bi-plus"></i>
    </div>
    <div class="dropup-center dropup">
        <button type="button" class="float-item" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person"></i>
        </button>
        <ul class="dropdown-menu dd-menu p-0">
            <li class="p-2"><p class="m-0 px-3 py-2">@user.UserName</p></li>
            <li><hr class="dropdown-divider m-0"></li>
            <li class="p-2"><a class="dropdown-item dd-item" asp-controller="Login" asp-action="LogoutUser">Logout</a></li>
        </ul>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>


